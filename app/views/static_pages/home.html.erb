<%= render partial: 'static_pages/hint_banner', locals: {new_show: @new_show} %>
<div class="isotope-container">
	<% @shows.each do |show| %>
		<%= link_to show_path(show) do %>
			<% unless show.id % 6 == 0 %>
				<svg id="<%="show-#{show.id}"%>" class="js-show Card" width="160" height="160"
					data-id="<%="show-#{show.id}"%>" data-matrix="<%=show.data%>">
				</svg>
			<% else %>
				<svg id="<%="show-#{show.id}"%>" class="js-show Card" width="330" height="330"
					data-id="<%="show-#{show.id}"%>" data-matrix="<%=show.data%>">
				</svg>
			<% end %>
		<% end %>
	<% end %>
</div>
<span class="club club--center" style=""></span>
