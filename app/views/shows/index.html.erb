<% @shows.each do |show| %>
	<svg id="<%="show-#{show.id}"%>" class="js-shows" width="100" height="100" style="border:1px solid #888;" js-id="<%="show-#{show.id}"%>" js-data="<%=show.data%>" link-to="<%= edit_show_path(show) %>">
	</svg>
<% end %>

<script>
	$('.js-shows').each(function() {
		var showID = $(this).attr('js-id');
		var originData = $(this).attr('js-data');
		var showData = ShowWidget.convertStrToCodeArr(originData);
		ShowWidget.generateShow('#'+showID,10,showData);
	});


</script>