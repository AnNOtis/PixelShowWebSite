
<!-- <h1>Sign up</h1> -->
<%= form_for @user, :html=>{:class=>'signup-form'} do |f| %>
<div class="title">註冊</div>
<%= f.label :name ,'姓名' %>
<%= f.text_field :name, :placeholder=>''%>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :password , "密碼"%>
<%= f.password_field :password %>
<%= f.label :password_confirmation, '密碼確認' %>
<%= f.password_field :password_confirmation%>
<%= render 'shared/error_messages', object: f.object %>
<%= f.submit %>
<% end %>