<header>
	<div class="container">
		<%= link_to root_path, class: 'logo' do %>
			<span><img src="/images/logo.png" alt="">Pixel Show</span>
		<% end %>
		<nav>
			<ul>
				<%= link_to shows_path do %>
					<li><%= t('nav.explore') %></li>
				<% end %>
				<%= link_to me_shows_path do %>
					<li><%= t('nav.my_show') %></li>
				<% end %>
				<li class="account-field">
					<% if signed_in?%>
						<%= current_user[:name]%>
						<ul class="user-nav">
							<%= link_to me_shows_path do %>
								<li><%= t('nav.my_show') %></li>
							<% end %>
							<%= link_to signout_path do %>
								<li><%= t('logout') %></li>
							<% end %>
						</ul>
					<% else %>
						<%= link_to login_path do %>
							<div><%= t('sign_in') %></div>
						<% end %>
					<% end %>
				</li>
			</ul>
		</nav>
	</div>

</header>
